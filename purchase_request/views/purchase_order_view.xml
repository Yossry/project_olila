<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_requisition_form_inherit_depart" model="ir.ui.view">
        <field name="name">purchase.requisition.form.depart.inherited</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name='department_id'/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_purchase_request" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.purchase.request</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name='department_id'/>
            </xpath>
        </field>
    </record>
</odoo>
